{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "paths": {
      "@/shared/*": ["./shared/*"],
      "@/popup/*": ["./pages/popup/*"],
      "@/app/*": ["./pages/app/*"],
      "@/pages/*": ["./pages/*"],
      "@/background/*": ["./background/*"],
      "@/content/*": ["./content/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./jest.config.ts",
    "./jest.setup.ts",
    "./scripts/**/*",
    "./tests/e2e/**/*",
    "./.github/actions/*.cjs",
    "esbuild/**/*"
  ],
  "exclude": [
    "dist",
    "dev",
    "src/safari",
    "tests/e2e/playwright-report",
    "tests/e2e/test-results"
  ]
}

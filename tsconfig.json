{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "paths": {
      "@/shared/*": ["./shared/*"],
      "@/popup/*": ["./popup/*"],
      "@/background/*": ["./background/*"],
      "@/content/*": ["./content/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./jest.config.ts",
    "./jest.setup.ts",
    "./scripts/**/*",
    "./.github/actions/*.cjs",
    "esbuild/**/*"
  ],
  "exclude": ["dist", "dev"]
}

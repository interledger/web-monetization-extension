{
  "name": "web-monetization-extension",
  "description": "Web Monetization is a browser API that allows the creation of a payment stream from the user agent to the website.",
  "private": true,
  "version": "0.1.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/interledger/web-monetization-extension"
  },
  "scripts": {
    "build": "node ./scripts/build.ts",
    "dev": "node --watch ./scripts/build.ts --dev",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format && prettier . --check",
    "format:fix": "biome format --write && prettier . --write --log-level=warn",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:chrome": "playwright test --project=chrome",
    "test:e2e:msedge": "playwright test --project=msedge",
    "test:e2e:report": "playwright show-report tests/e2e/playwright-report",
    "test:ci": "jest --reporters=default --reporters=github-actions"
  },
  "dependencies": {
    "@interledger/open-payments": "^7.1.3",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "@radix-ui/react-tabs": "^1.1.13",
    "awilix": "^12.0.5",
    "class-variance-authority": "^0.7.1",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^4.1.0",
    "http-message-signatures": "^1.0.4",
    "httpbis-digest-headers": "^1.0.0",
    "iso8601-duration": "^2.1.3",
    "loglevel": "^1.9.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "safe-buffer": "5.2.1",
    "tailwind-merge": "^2.6.0",
    "valtio": "^2.1.8",
    "webextension-polyfill": "^0.12.0",
    "wouter": "^3.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@jgoz/jest-esbuild": "^1.0.10",
    "@octokit/openapi-webhooks-types": "^12.0.3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/archiver": "^7.0.0",
    "@types/chrome": "^0.1.27",
    "@types/github-script": "github:actions/github-script#v8.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/webextension-polyfill": "^0.12.4",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.11",
    "esbuild-node-builtin": "^0.1.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-style-plugin": "^1.6.3",
    "jest": "^30.2.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-expect-message": "^1.1.3",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react-scan": "^0.4.3",
    "sade": "^1.8.1",
    "tailwindcss": "^3.4.18",
    "tinyspy": "^4.0.4",
    "totp-generator": "2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "pnpm": "^10.18.3",
    "npm": "pnpm",
    "yarn": "pnpm",
    "node": "^24.8.0"
  },
  "pnpm": {
    "overrides": {
      "safe-buffer": "5.2.1",
      "string_decoder": "1.3.0",
      "readable-stream": "2.3.8",
      "bn.js": "5.2.2",
      "structured-headers": "1.0.1"
    }
  },
  "type": "module",
  "packageManager": "pnpm@10.19.0"
}
